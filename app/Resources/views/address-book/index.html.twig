{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                <h3 class="text-center">Address Books</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-responsive">
                        <thead>
                            <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">Zip</th>
                            <th scope="col">City</th>
                            <th scope="col">Street number</th>
                            <th scope="col">Country</th>
                            <th scope="col">Photo</th>
                            <th scope="col" colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for address in addresses %}
                            <tr>
                                <th scope="row">1</th>
                                <td>{{address.firstname}}</td>
                                <td>{{address.lastname}}</td>
                                <td>{{address.phone}}</td>
                                <td>{{address.email}}</td>
                                <td>{{address.birthday | date()}}</td>
                                <td>{{address.city}}</td>
                                <td>{{address.zip}}</td>
                                <td>{{address.streetAndNumber}}</td>
                                <td>{{address.country}}</td>
                                <td>
                                    {% if address.picture %}
                                        <img src="http://127.0.0.1:8001/uploads/pictures/{{address.picture}}" height="100" width="100"/>
                                    {% else %}
                                        none
                                    {% endif %}
                                </td>
                                <td><a href="/address/edit/{{address.id}}"><span class="btn btn-primary">Edit</span></a></td>
                                <td><a href="/address/delete/{{address.id}}"><span class="btn btn-danger">Delete</span></a></td>
                            </tr>
                            {% endfor %}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
       
{% endblock %}